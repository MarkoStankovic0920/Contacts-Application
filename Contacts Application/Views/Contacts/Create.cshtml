@model Contacts
@{
    ViewData["Title"] = "Contacts-Create";
}
<form method="post" >

    <div class="container-sm  p-4 text-light bg-dark p-2 text-dark shadow-lg rounded w-100">
        <div class="row pb-2">
            <h2 >Create Contact</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger mt-0 mb-1 ms-3"></div>
        <div class="mb-5 text-info d-flex flex-column gap-4">
            <div>
            <label asp-for="Name" class="mb-1" ></label> <i class="bi bi-person-fill text-light"></i>
            <input asp-for="Name" placeholder="Write your name here." type="text" class="form-control highlight-color text-white border-0" id="NameValidate" />
            </div>
            <div>
            <label asp-for="Phone" class="mb-1"></label>    <i class="bi bi-telephone text-light"></i>
            <input asp-for="Phone" type="number" placeholder="Write your phone number here." class="form-control highlight-color text-white border-0" />
            </div>
            <div>
            <label asp-for="Email" class="mb-1"></label>    <i class="bi bi-envelope-at text-light"></i>
            <input asp-for="Email" placeholder="Write your email here." class="form-control highlight-color text-white border-0" />
            </div>
        </div>
        <div class="d-flex justify-content-end gap-3">
        <button type="submit" class="btn btn-primary " style="width:200px;" onmouseover="this.style.color='#2ecc71'" onmouseout="this.style.color='#f7f9f9'">Create</button>
        <a asp-controller="Contacts" asp-action="Index" class="btn btn-light" style="width:200px;">Back to Contacts</a>
        </div>
    </div>
</form>

 @section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}