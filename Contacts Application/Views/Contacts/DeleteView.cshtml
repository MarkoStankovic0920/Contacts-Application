@model Contacts
@{
    ViewData["Title"] = "Contacts-Delete";
}
<form  method="post"  asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="container-sm  p-4 text-light bg-dark p-2 text-dark shadow-lg rounded w-100">
        <div class="row pb-2">
            <h2>Delete Contact</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger mt-0 mb-1 ms-3"></div>
        <div class="mb-5 text-info d-flex flex-column gap-4">
            <div>
            <label asp-for="Name" class="mb-1"></label> <i class="bi bi-person-fill text-light"></i>
            <p class="text-light fw-bolder">@Model.Name</p>
            </div>
            <div>
            <label asp-for="Phone" class="mb-1"></label>    <i class="bi bi-telephone text-light"></i>
            <p class="text-light fw-bolder">@Model.Phone</p>
            </div>
            <div>
            <label asp-for="Email" class="mb-1"></label>    <i class="bi bi-envelope-at text-light"></i>
            <p class="text-light fw-bolder">@Model.Email</p>
            </div>
        </div>
        <div class="d-flex justify-content-end gap-3">
        <button type="submit" class="btn btn-primary " style="width:200px;" onclick="return confirm('Are you sure you want to delete this?')">Remove</button>
        <a asp-controller="Contacts" asp-action="Index" class="btn btn-light" style="width:200px;">Back to Contacts</a>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}