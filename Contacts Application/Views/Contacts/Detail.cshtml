@model Contacts
@{
    ViewData["Title"] = "Contacts-Detail";
}
<title>Contact Profile Page</title>
<div class="container-sm  p-4 text-light bg-dark p-2 text-dark shadow-lg rounded w-100">
    <div class="d-flex flex-column gap-3 pb-2">
        <a asp-controller="Contacts" asp-action="Index" class="text-light fs-6" ><i class="bi bi-arrow-left-short"></i> Back</a>
        <div class="d-flex justify-content-center align-middle text-center p-3 flex-column gap-2 align-items-center">
        <div class="text-light highlight-color rounded-circle d-flex justify-content-center align-middle text-center" style="height:100px; width:100px; padding:20px;">
            <i class="bi bi-person-fill text-primary fs-1"></i>
        </div>
        <h2>@Model.Name's Details</h2>
        </div>
        <hr />
    </div>
    <div asp-validation-summary="All" class="text-danger mt-0 mb-1 ms-3"></div>
    <div class="mb-5 text-info d-flex flex-column gap-4">
        <div>
            <label asp-for="Name" class="mb-1"></label> <i class="bi bi-person-fill text-light"></i>
            <p class="text-light fw-bolder">@Model.Name</p>
        </div>
        <div>
            <label asp-for="Phone" class="mb-1"></label>    <i class="bi bi-telephone text-light"></i>
            <p class="text-light fw-bolder">@Model.Phone</p>
        </div>
        <div>
            <label asp-for="Email" class="mb-1"></label>    <i class="bi bi-envelope-at text-light"></i>
            <p class="text-light fw-bolder">@Model.Email</p>
        </div>
    </div>
    <div class="d-flex justify-content-end gap-3">
        <a asp-controller="Contacts" asp-action="Edit" asp-route-id="@Model.Id" class="text-success fs-5"><i class="bi bi-pencil text-success m-1"></i>Edit</a> <a asp-controller="Contacts" asp-action="DeleteView" asp-route-id="@Model.Id" class="text-danger fs-5"><i class="bi bi-trash-fill text-danger m-1"></i>Delete</a> 
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}