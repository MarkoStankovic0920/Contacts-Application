@model Contacts
@{
    ViewData["Title"] = "Contacts-Detail";
}
<title>Contact Profile Page</title>
<header>
    <div class="container p-0">
      
        <div class="text-center row-2" style="background: linear-gradient(90deg, rgba(0,29,36,1) 0%, rgba(10,194,237,1) 0%, rgba(24,54,88,1) 0%, rgba(29,65,99,1) 0%, rgba(3,195,237,1) 49%, rgba(29,65,99,1) 100%); height:80px">
            <i class="bi bi-person-fill text-light"></i>
            <h1 class="name text-light">@Model.Name</h1>
        </div>
    </div>
</header>
    <div class="p-1 mt-2 text-center">
        <div asp-validation-summary="All" class="text-danger mt-0 mb-1 ms-3"></div>
        <div class="mb-2 text-info">
        <label asp-for="Email" class="mb-1"><i class="bi bi-envelope-at"></i></label>
        
        <h2 class="text-light">@Model.Email</h2>
            <hr />
        <label asp-for="Phone" class="mb-1"></i></label> <i class="bi bi-telephone text-light"></i>
            <h2 class="text-light">@Model.Phone</h2>
            <hr />
        <p class="ps-0 pb-2"><a asp-controller="Contacts" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil text-success m-2">Edit</i></a> <a asp-controller="Contacts" asp-action="Delete" asp-route-id="@Model.Id"><i class="bi bi-trash-fill text-danger">Delete</i></a></p>
        <a asp-controller="Contacts" asp-action="Index" class="btn btn-light" style="width:200px;">Back to Contacts</a>
        </div>
    </div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}